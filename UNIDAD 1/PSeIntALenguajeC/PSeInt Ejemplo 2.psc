Algoritmo c_SueldoDeUnAsesor
	//Declaración de Variables
	Definir sueldo,sueldoTotal Como Real;
	Definir MESES Como Entero;
	MESES=3
	//Datos de Entrada
	Escribir '¿Cuál es el sueldo mensual del asesor?'
	Leer sueldo 
	
	//Proceso 
	sueldoTotal=sueldo*MESES
	
	//Salida
	Escribir 'El sueldo del asesor por los tres meses de trabajo es: ', sueldoTotal
	
FinAlgoritmo
